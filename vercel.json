{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/leads", "destination": "/leads.html" },
    { "source": "/leads-real", "destination": "/leads-real.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/register", "destination": "/register.html" },
    { "source": "/automacoes", "destination": "/automacoes.html" },
    { "source": "/gamificacao", "destination": "/gamificacao.html" },
    { "source": "/relatorios", "destination": "/relatorios.html" },
    { "source": "/configuracoes", "destination": "/configuracoes.html" },
    { "source": "/create-org", "destination": "/create-org.html" },
    { "source": "/test-supabase", "destination": "/test-supabase.html" },
    { "source": "/", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
