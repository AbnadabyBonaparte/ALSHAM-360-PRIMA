{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ALSHAM 360° PRIMA — Node.js & Scripts Config",
  "compilerOptions": {
    /* Padrão moderno compatível com Vite e ESM */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Compatibilidade Node e Vite */
    "types": [
      "node",
      "vite/client"
    ],

    /* Permissões e interoperabilidade */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Caminhos e organização */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Segurança e otimização */
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*",
    "scripts/**/*",
    "server.js",
    "src/lib/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
