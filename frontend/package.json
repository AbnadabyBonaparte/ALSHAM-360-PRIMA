{
  "name": "alsham-360-prima",
  "private": true,
  "version": "4.1.0",
  "type": "module",
  "description": "ALSHAM 360° PRIMA - Enterprise CRM with AI Integration, Gamification & Automation",
  "author": "ALSHAM Team",
  "license": "MIT",
  "keywords": [
    "crm",
    "enterprise",
    "supabase",
    "gamification",
    "automation",
    "ai-integration",
    "real-time",
    "multi-tenant"
  ],
  "homepage": "https://app.alshamglobal.com.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/alsham/alsham-360-prima"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build --mode production",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "start": "node server.js",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build:analyze": "vite build --mode analyze",
    "clean": "rm -rf dist node_modules/.vite",
    "postinstall": "npm run build:tailwind",
    "build:tailwind": "tailwindcss -i ./src/input.css -o ./src/style.css --watch",
    "deploy:railway": "npm run build && railway deploy",
    "health-check": "node scripts/health-check.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-legacy": "^5.4.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^1.6.0",
    "workbox-window": "^7.1.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.43.5",
    "express": "^4.18.3",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "chart.js": "^4.4.3",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^3.6.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "xlsx": "^0.18.5",
    "papaparse": "^5.4.1",
    "html2canvas": "^1.4.1",
    "qrcode": "^1.5.3",
    "uuid": "^10.0.0",
    "lodash-es": "^4.17.21",
    "validator": "^13.12.0",
    "dompurify": "^3.1.5",
    "marked": "^12.0.2",
    "highlight.js": "^11.9.0",
    "fuse.js": "^7.0.0",
    "sortablejs": "^1.15.2",
    "tippy.js": "^6.3.7",
    "flatpickr": "^4.6.13",
    "choices.js": "^10.2.0",
    "notyf": "^3.10.0",
    "animate.css": "^4.1.1",
    "aos": "^2.3.4",
    "swiper": "^11.1.4",
    "intersection-observer": "^0.12.2",
    "web-vitals": "^4.2.0",
    "workbox-precaching": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "volta": {
    "node": "20.14.0",
    "npm": "10.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "pwa": {
    "name": "ALSHAM 360° PRIMA",
    "short_name": "ALSHAM360",
    "description": "Enterprise CRM with AI Integration",
    "theme_color": "#3b82f6",
    "background_color": "#ffffff",
    "display": "standalone",
    "orientation": "portrait-primary",
    "scope": "/",
    "start_url": "/"
  },
  "railway": {
    "build": {
      "command": "npm run build"
    },
    "deploy": {
      "startCommand": "npm start"
    }
  }
}

