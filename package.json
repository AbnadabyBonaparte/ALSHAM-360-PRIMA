{
  "name": "alsham-360-prima",
  "version": "2.0.4",
  "description": "ALSHAM 360° PRIMA — CRM Enterprise com IA, Gamificação e Automações Integradas (Build Estável v6.0.4)",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run build:css && vite --host 0.0.0.0",
    "dev:test": "vite --host 127.0.0.1 --port 4173",
    "build": "npm run build:css && vite build",
    "build:css": "tailwindcss -i ./css/input.css -o ./css/tailwind.min.css --minify",
    "watch:css": "tailwindcss -i ./css/input.css -o ./css/tailwind.min.css --watch",
    "preview": "vite preview --host 0.0.0.0",
    "server:dev": "nodemon server.js",
    "deploy": "npm run build && npm start",
    "clean": "rm -rf dist node_modules package-lock.json css/tailwind.min.css",
    "fresh-install": "npm run clean && npm install && npm run build:css",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "start-server-and-test dev:test http://127.0.0.1:4173 \"cypress run\"",
    "test:coverage": "vitest run --coverage",
    "audit:fix": "npm audit fix --force"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "2.45.4",
    "express": "4.21.2",
    "cors": "2.8.5",
    "helmet": "8.0.0",
    "compression": "1.7.4",
    "express-rate-limit": "7.4.1",
    "morgan": "1.10.0",
    "dotenv": "16.4.5",
    "redis": "4.7.0",
    "chart.js": "4.4.6",
    "canvas-confetti": "1.9.3",
    "jspdf": "2.5.2",
    "xlsx": "0.18.5",
    "papaparse": "5.4.1",
    "vite": "5.4.20",
    "vite-plugin-compression": "0.5.1",
    "tailwindcss": "3.4.14",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.47",
    "vite-plugin-pwa": "0.20.5",
    "@vitejs/plugin-legacy": "5.4.2",
    "@tailwindcss/forms": "0.5.9",
    "@tailwindcss/typography": "0.5.15",
    "@tailwindcss/aspect-ratio": "0.4.2"
  },
  "devDependencies": {
    "rollup-plugin-visualizer": "5.12.0",
    "cssnano": "7.0.6",
    "nodemon": "3.1.7",
    "eslint": "9.15.0",
    "vitest": "2.1.4",
    "@vitest/coverage-v8": "2.1.4",
    "cypress": "13.15.0",
    "start-server-and-test": "2.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AbnadabyBonaparte/ALSHAM-360-PRIMA.git"
  },
  "bugs": {
    "url": "https://github.com/AbnadabyBonaparte/ALSHAM-360-PRIMA/issues"
  },
  "homepage": "https://app.alshamglobal.com.br"
}
