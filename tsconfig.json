{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ALSHAM 360° PRIMA — React + Supabase Hybrid Config",
  "compilerOptions": {
    /* Diretórios */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "@react/*": ["./react/*"]
    },

    /* Módulos e sistema */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* React */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* Saída e build */
    "outDir": "./dist",
    "sourceMap": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client", "@supabase/supabase-js"],

    /* Segurança e qualidade */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },

  "include": [
    "src/react/**/*",
    "src/lib/**/*",
    "src/js/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress",
    "tests"
  ]
}
